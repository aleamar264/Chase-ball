<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
    <link name="robot_footprint"></link>
    <joint name="robot_footprint_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="robot_footprint"/>
        <child link="chassis"/>        
    </joint>
    <link name="chassis">
        <pose>0 0 0.1 0 0 0</pose>
        <inertial>
            <mass value="10.0"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>           
        </inertial>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.35 0.2 0.1"/>
            </geometry>
        </collision>
        <visual name='chassis_visual'>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size=".35 0.2 0.1"/>
            </geometry>
        </visual>
        <collision name="back_caster_collision">
            <origin xyz="-0.136 0.0 -0.037" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.039"/>
            </geometry>
        </collision>

        <visual name='back_caster_visual'>
            <origin xyz="-0.136 0.0 -0.037" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.039"/>
            </geometry>
        </visual>
        
        <collision name="front_caster_collision">
            <origin xyz="0.136 0.0 -0.037" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.039"/>
            </geometry>
        </collision>

        <visual name="front_caster_visual">
            <origin xyz="0.136 0.0 -0.037" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.039"/>
            </geometry>
        </visual>
    </link>


    <link name="rigth_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <mass value=".50"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual name="rigth_wheel_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.078" length="0.02"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision name="rigth_wheel_collision">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.078" length="0.02"/>
            </geometry>
        </collision>
    </link>


    <link name="left_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <mass value=".50"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual name="left_wheel_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.078" length="0.02"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision name="left_wheel_collision">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.078" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <joint name="left_wheel_hinge" type="continuous">
        <origin xyz="0.0 0.12 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
        <limit effort="10000.0" velocity="1000.0"/>
        <dynamics damping="1.0" friction="1.0"/>        
    </joint>

    <joint name="rigth_wheel_hinge" type="continuous">
        <origin xyz="0.0 -0.12 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="rigth_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
        <limit effort="10000.0" velocity="1000.0"/>
        <dynamics damping="1.0" friction="1.0"/>        
    </joint>

<!-- Link y Joint para una camara sencilla -->
    <link name="camera">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1e-5"/>
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
        <visual name="camera_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision name="camera_collision">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="camera_joint" type="fixed">
        <origin xyz="0.2 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="camera"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>


<!-- Lidar hokuyo -->

    <link name="hokuyo">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1e-5"/>
            <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
        <visual name="hokuyo_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="hokuyo_hinge" type="fixed">
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="hokuyo"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>




</robot>
